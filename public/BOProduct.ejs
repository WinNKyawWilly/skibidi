                            data-book-title="<%= book.title %>"
                            data-book-link="<%= book.cover_img %>" 
                            data-book-author="<%= book.author %>"
                            data-book-genre="<%= book.genre %>" 
                            data-book-base-price="<%= book.base_price %>"
